<script>
function testimonialForm() {
    return {
        formKey: '<?= $escaper->escapeJs($viewModel->getFormKey()) ?>',
        formData: {
            customer_name: '',
            customer_email: '',
            rating: 0,
            message: ''
        },
        errors: {},
        hoverRating: 0,
        isSubmitting: false,

        setRating(rating) {
            this.formData.rating = rating;
            this.validateField('rating');
        },

        validateField(field) {
            const value = this.formData[field];
            this.errors[field] = '';

            switch(field) {
                case 'customer_name':
                    if (!value || value.trim() === '') {
                        this.errors[field] = '<?= $escaper->escapeJs(__('Name is required')) ?>';
                    } else if (value.length < 2) {
                        this.errors[field] = '<?= $escaper->escapeJs(__('Name must be at least 2 characters')) ?>';
                    } else if (value.length > 255) {
                        this.errors[field] = '<?= $escaper->escapeJs(__('Name cannot exceed 255 characters')) ?>';
                    }
                    break;

                case 'customer_email':
                    if (!value || value.trim() === '') {
                        this.errors[field] = '<?= $escaper->escapeJs(__('Email is required')) ?>';
                    } else if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(value)) {
                        this.errors[field] = '<?= $escaper->escapeJs(__('Please enter a valid email address')) ?>';
                    } else if (value.length > 255) {
                        this.errors[field] = '<?= $escaper->escapeJs(__('Email cannot exceed 255 characters')) ?>';
                    }
                    break;

                case 'rating':
                    if (!value || value < 1 || value > 5) {
                        this.errors[field] = '<?= $escaper->escapeJs(__('Please select a rating')) ?>';
                    }
                    break;

                case 'message':
                    if (!value || value.trim() === '') {
                        this.errors[field] = '<?= $escaper->escapeJs(__('Testimonial message is required')) ?>';
                    } else if (value.length < 10) {
                        this.errors[field] = '<?= $escaper->escapeJs(__('Message must be at least 10 characters')) ?>';
                    }
                    break;
            }
        },

        validateForm() {
            this.validateField('customer_name');
            this.validateField('customer_email');
            this.validateField('rating');
            this.validateField('message');

            return !Object.values(this.errors).some(error => error !== '');
        },

        async submitForm(event) {
            if (!this.validateForm()) {
                return;
            }

            this.isSubmitting = true;

            // Let the form submit naturally
            event.target.submit();
        }
    }
}
</script>

